<div class="content-left">
    <div class="content-left-box">
        <div class="content-box"></div>
        <%- model_class = Author -%>
        <div class="page-header">
          <%= link_to "", authors_path, class: "glyphicon glyphicon-circle-arrow-left"%>
          <span><%= @author.name%></span>
        </div>

        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
          <dd><%= @author.name %></dd>
          <dt><strong><%= model_class.human_attribute_name(:nationality) %>:</strong></dt>
          <dd><%= @author.nationality %></dd>
          <dt><strong><%= model_class.human_attribute_name(:birthday) %>:</strong></dt>
          <dd><%= @author.birthday %></dd>
        </dl>

        <%= link_to t('.back', :default => t("helpers.links.back")),
                      authors_path, :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_author_path(@author), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      author_path(@author),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
    </div>
</div>
